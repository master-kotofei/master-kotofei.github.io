{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{{ range .Data.Pages }}
<url>
<loc>{{ .Site.BaseURL }}{{ .RelPermalink | strings.TrimPrefix "/" }}</loc>
{{ if not .Date.IsZero }}<lastmod>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>{{ end }}
<changefreq>hourly</changefreq>
<priority>0.5</priority>
</url>
{{ end }}
<url>
<loc>{{ .Site.BaseURL }}</loc>
<lastmod>{{ now.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
<changefreq>hourly</changefreq>
<priority>1.0</priority>
</url>
{{ range .Site.Taxonomies.categories }}
<url>
<loc>{{ $.Site.BaseURL }}{{ .Page.RelPermalink | strings.TrimPrefix "/" }}</loc>
<lastmod>{{ .Page.Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
<changefreq>hourly</changefreq>
<priority>0.7</priority>
</url>
{{ end }}
{{ range .Site.Taxonomies.tags }}
<url>
<loc>{{ $.Site.BaseURL }}{{ .Page.RelPermalink | strings.TrimPrefix "/" }}</loc>
<lastmod>{{ .Page.Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
<changefreq>hourly</changefreq>
<priority>0.6</priority>
</url>
{{ end }}
</urlset>
